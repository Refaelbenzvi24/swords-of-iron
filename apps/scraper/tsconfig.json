{
	"compilerOptions" : {
		"outDir" :             "./out",
		"rootDir" :            "./",
		"sourceMap" :          true,
		"moduleResolution" :   "node",
		"target" :             "es5",
		"module" :             "commonjs",
		"esModuleInterop" :    true,
		"skipLibCheck" :       true,
		"downlevelIteration" : true,
		"resolveJsonModule" :  true
	},
	"exclude" :         [
		"node_modules"
	]
}
